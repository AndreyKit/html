{
  "name": "texlab/html",
  "description": "Set of classes for view templates",
  "license": "MIT",
  "autoload": {
    "psr-4": {
      "TexLab\\Html\\": "src"
    }
  },
  "require": {
    "php": "^7.4"
  },
  "require-dev": {
    "phpunit/phpunit": "^9.2",
    "phpstan/phpstan": "^0.12",
    "vimeo/psalm": "^3.0@dev",
    "squizlabs/php_codesniffer": "3.*"
  },
  "minimum-stability": "dev",
  "scripts": {
    "test": "phpunit --testsuite alltests",
    "phpstan": "phpstan analyse -c phpstan.neon",
    "psalm": "psalm",
    "codestyle": "phpcs",
    "codestylefix": "phpcbf"
  },
  "scripts-descriptions": {
    "test": "Shortcut to run the full test suite.",
    "phpstan": "Runs the PHPStan static analyzer.",
    "psalm": "Runs the Psalm static analyzer.",
    "codestyle": "Checks code style.",
    "codestylefix": "Fix code style."
  }
}
